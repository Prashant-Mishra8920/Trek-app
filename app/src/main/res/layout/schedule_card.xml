<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/DefaultRadius"
    app:cardElevation="15dp">
    <LinearLayout
        android:id="@+id/clickLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/DefaultRadius"
            app:cardElevation="10dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/scheduleImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/raj"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/DefaultPadding"
            android:paddingVertical="@dimen/DefaultPaddingShort"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/scheduleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rajasthan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/notification_icon"
                app:tint="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/DefaultPadding"
            android:paddingBottom="@dimen/DefaultPadding">
            <TextView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06/11/2021" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_marginHorizontal="@dimen/DefaultVerticalMargin"
                android:scaleY="0.8"
                android:scaleX="0.8"/>
            <TextView
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/11/2021" />
            <TextView
                android:id="@+id/noDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 days"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>