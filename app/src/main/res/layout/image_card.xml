<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="@dimen/DefaultVerticalMargin"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="@dimen/DefaultVerticalMargin">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">
            <ImageView
                android:id="@+id/LocationImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/raj"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/imageContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:elevation="9dp"
            android:background="@drawable/gradient_reverse">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rajasthan"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:padding="@dimen/DefaultPaddingShort"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>