<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trek" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--         Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/very_light_grey</item>
        <item name="colorOnPrimary">@color/very_light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_light_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>

        <item name="colorAccent">@color/grey</item>
    </style>

    <style name="SplashScreen" parent="Theme.Trek">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="EditText">
        <item name="colorPrimary">@color/customBlue</item>
        <item name="colorPrimaryVariant">@color/very_light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:radius">10dp</item>
        <item name="android:colorFocusedHighlight">@color/red</item>
        <item name="colorAccent">@color/grey</item>
    </style>
    <style name="FullScreen" parent="Theme.Trek">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>a

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomStyle</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>
    <style name="BottomStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="weather" parent="Theme.Trek">
        <item name="colorPrimary">#5dacdd</item>
        <item name="colorPrimaryDark">#5dacdd</item>
        <item name="colorAccent">#5dacdd</item>
    </style>

    <style name="Picker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

</resources>